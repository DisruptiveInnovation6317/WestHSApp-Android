<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:id="@+id/bell_schedule_linearLayout">

    <TextView
        android:id="@+id/todays_date_textView"
        android:textSize="26sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/block_1_textView"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Block 1 - " />

    <TextView
        android:id="@+id/block_2_textView"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Block 2 - " />

    <TextView
        android:id="@+id/a_lunch_textView"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A Lunch - " />

    <TextView
        android:id="@+id/b_lunch_textView"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="B Lunch - " />

    <TextView
        android:id="@+id/c_lunch_textView"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="C Lunch - " />

    <TextView
        android:id="@+id/d_lunch_textView"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="D Lunch - " />

    <TextView
        android:id="@+id/ff_textView"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Falcon Flex - " />

    <TextView
        android:id="@+id/block_4_textView"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Block 4 - " />
</LinearLayout>